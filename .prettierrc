{
  "plugins": ["@prettier/plugin-xml"],
  "xmlWhitespaceSensitivity": "ignore",
  "xmlQuoteAttributes": "double",
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": true,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "arrowParens": "always",
  "endOfLine": "lf",
  "proseWrap": "always",
  "overrides": [
    {
      "files": [".github/workflows/*.yml", ".github/workflows/*.yaml"],
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
